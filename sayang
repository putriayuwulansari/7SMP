  <form id="quizForm">
    <div class="question">
      <h3>1. Berapa hasil dari 1/2 + 3/4?</h3>
      <div class="options">
        <input type="radio" id="q1a" name="q1" value="a">
        <label for="q1a">1</label>
        <input type="radio" id="q1b" name="q1" value="b">
        <label for="q1b">1 1/4</label>
        <input type="radio" id="q1c" name="q1" value="c">
        <label for="q1c">1 1/2</label>
        <input type="radio" id="q1d" name="q1" value="d">
        <label for="q1d">1 3/4</label>
      </div>
    </div>

    <div class="question">
      <h3>2. Bentuk desimal dari 2/5 adalah ...</h3>
      <div class="options">
        <input type="radio" id="q2a" name="q2" value="a">
        <label for="q2a">0,2</label>
        <input type="radio" id="q2b" name="q2" value="b">
        <label for="q2b">0,25</label>
        <input type="radio" id="q2c" name="q2" value="c">
        <label for="q2c">0,4</label>
        <input type="radio" id="q2d" name="q2" value="d">
        <label for="q2d">0,5</label>
      </div>
    </div>

    <div class="question">
      <h3>3. Hasil dari -6 + 9 adalah ...</h3>
      <div class="options">
        <input type="radio" id="q3a" name="q3" value="a">
        <label for="q3a">-15</label>
        <input type="radio" id="q3b" name="q3" value="b">
        <label for="q3b">3</label>
        <input type="radio" id="q3c" name="q3" value="c">
        <label for="q3c">-3</label>
        <input type="radio" id="q3d" name="q3" value="d">
        <label for="q3d">6</label>
      </div>
    </div>

    <button type="submit" class="btn">Kirim Jawaban</button>
  </form>

  <div class="result" id="result" style="display: none;"></div>
