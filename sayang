<script>
  document.getElementById("quizForm").addEventListener("submit", function(e) {
    e.preventDefault();

    const answers = {
      q1: "b", // 1/2 + 3/4 = 5/4 = 1 1/4
      q2: "c", // 2/5 = 0.4
      q3: "b"  // -6 + 9 = 3
    };

    let score = 0;
    let total = Object.keys(answers).length;
    let feedback = "";

    for (let key in answers) {
      const selected = document.querySelector(`input[name="${key}"]:checked`);
      const correct = answers[key];
      const answerText = document.querySelector(`input[name="${key}"][value="${correct}"] + label`).innerText;

      if (selected) {
        if (selected.value === correct) {
          score++;
          feedback += `<p><strong>${key.toUpperCase()}:</strong> Benar ✅</p>`;
        } else {
          feedback += `<p><strong>${key.toUpperCase()}:</strong> Salah ❌ (Jawaban benar: <em>${answerText}</em>)</p>`;
        }
      } else {
        feedback += `<p><strong>${key.toUpperCase()}:</strong> Tidak dijawab ❌ (Jawaban benar: <em>${answerText}</em>)</p>`;
      }
    }

    document.getElementById("result").style.display = "block";
    document.getElementById("result").innerHTML = `<strong>Skor Anda: ${score} dari ${total}</strong><br>${feedback}`;
  });
</script>

